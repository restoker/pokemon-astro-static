---
const nombre = Astro.url.pathname;
---

<p>{nombre}</p>
{
    nombre === "/about" ? (
        <nav>
            <a href="/">Home Page</a>
        </nav>
    ) : (
        <nav>
            <a href="/">Home Page</a>
            <a href="/about">About Page</a>
            <a href="contact">Contact Page</a>
        </nav>
    )
}
